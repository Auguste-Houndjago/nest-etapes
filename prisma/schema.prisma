generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL") // Optionnel mais recommand√© pour les migrations
}

model User {
  id        String    @id @default(cuid())  
  email     String    @unique
  name      String?
  firstname String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("users") 
 
}